@model Moridge.Models.BookingEventModel

@{
    ViewBag.Title = Model.GetTitle();
}

<link rel="stylesheet" type="text/css" href="~/Content/themes/moridge/moridge.style.css" />
@section Header {
    <a href="@Url.Action("BookingDay", "Driver")" id="nav-btn" data-icon="back" data-transition="slideup" data-iconpos="notext">Menu</a>
    <h6 class="header-heading">
        @Model.GetTitle()
    </h6>
}

@Html.ValidationSummary()

<ul data-role="listview" id="popup-listview" data-inset="true" style="min-width: 210px;">
    <li>
        <strong>@Html.DisplayFor(m => m.Event.Location)</strong>
        <p>@Html.DisplayFor(m => m.Event.Summary)</p>
        <p>@Html.DisplayFor(m => m.Event.Description)</p>
    </li>
</ul>

@using (Html.BeginForm("BookingEventUpdate", "Driver", FormMethod.Post, new { data_ajax = "false" }))
{
    @Html.EnumDropDownListFor(m => m.CurrentStatus)
    @Html.HiddenFor(m => m.Event.Id)
    <input type="submit" id="submit" value=" Uppdatera" />
}

<div data-role="footer" data-theme="b" data-position="fixed" data-id="footer" data-tap-toggle="false">
    <div data-role="navbar">
        <ul>
            <li><a href="@Url.Action("BookingDay", "Driver")" data-transition="slideup"><span>
                <i class="material-icons">assignment</i>
                <span style="font-size: 12px; display: block;">Idag</span>
            </span></a>
            </li>
            <li><a href="@Url.Action("BookingWeek", "Driver")" data-transition="slide"><span>
                <i class="material-icons">event</i>
                <span style="font-size: 12px; display: block;">Vecka</span>
            </span></a></li>
        </ul>
    </div>
</div>
